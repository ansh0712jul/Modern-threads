  <!-- // form  -->
<div class="col-lg-6 mx-auto " >
    <div class="container mt-5 mb-5 border shadow p-5  ">
        <h2 class="mb-4 text-center">Add a New Product</h2>
        <form action="/products"  method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="name" class="form-label">Product Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
                <div class="valid-feedback">
                    looks good!
                  </div>
                <div class="invalid-feedback">
                    please enter a valid product name 
                  </div>
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Product Image:</label>
                <input type="text" class="form-control" id="img" name="img" required>
                <div class="valid-feedback">
                    looks good!
                  </div>
                <div class="invalid-feedback">
                    Please add a product image 
                  </div>
            </div>
            <div class="form-group mb-3">
                <label for="desc" class="form-label">Product Description:</label>
                <textarea class="form-control" id="desc" name="desc" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Product Price:</label>
                <input type="number" class="form-control" id="price" name="price" required>
                <div class="valid-feedback">
                    looks good!
                  </div>
                <div class="invalid-feedback">
                    Please add a price for product
                  </div>
            </div>
            <!-- <div class="mb-3">
                <label for="stock" class="form-label">Product Stock:</label>
                <input type="number" class="form-control" id="stock" name="stock" required>
            </div> -->

            <button type="submit" class="btn btn-primary">Create Product</button>
        </form>
    </div>
</div>

<script>
    //iife--> immediately invoked fuction expression 
    (() => {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
          form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
      })()
</script>
</body>
</html>